{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "rules": {
    "new-cap": 0,
    "comma-dangle": 0,
    "max-len": [2, 200],
    "arrow-body-style": 0,
    "indent": ["error", 2],
    "prefer-arrow-callback": 0,
    "no-param-reassign": [2, { "props": false }],
    "quotes": [2, "double", { "avoidEscape": true }]
  },
  "plugins": ["mocha"],
  "env": {
    "node": true,
    "mocha": true
  }
}
